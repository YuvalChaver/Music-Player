<Window x:Class="YuvalChaver.Telhai.DotNet.PlayerProject.MusicPlayer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YuvalChaver.Telhai.DotNet.PlayerProject"
        mc:Ignorable="d"
         Title="Classroom Music Player" Height="650" Width="1000"   Background="#222" Foreground="White" WindowStartupLocation="CenterScreen">
    <Grid Margin="15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Panel: Player Controls and Metadata -->
        <StackPanel Grid.Column="0" Margin="0,0,20,0">
            <!-- Status and Current Song -->
            <TextBlock x:Name="txtStatus" Text="Ready" Foreground="#AAA" HorizontalAlignment="Center"/>
            <TextBlock x:Name="txtCurrentSong" Text="No Song Selected" FontSize="20" FontWeight="Bold" Margin="0,10,0,20" HorizontalAlignment="Center" TextWrapping="Wrap"/>

            <!-- Album Artwork -->
            <Border BorderBrush="#555" BorderThickness="1" HorizontalAlignment="Center" Margin="0,0,0,20" Background="#333">
                <Image x:Name="imgAlbumArt" Width="250" Height="250" Stretch="UniformToFill"/>
            </Border>

            <!-- Metadata Display -->
            <Grid Margin="0,10,0,20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Artist -->
                <StackPanel Grid.Row="0" Margin="0,5">
                    <TextBlock Text="Artist:" Foreground="#AAA" FontSize="12"/>
                    <TextBlock x:Name="txtArtist" Text="Loading..." Foreground="White" TextWrapping="Wrap"/>
                </StackPanel>

                <!-- Album -->
                <StackPanel Grid.Row="1" Margin="0,5">
                    <TextBlock Text="Album:" Foreground="#AAA" FontSize="12"/>
                    <TextBlock x:Name="txtAlbum" Text="Loading..." Foreground="White" TextWrapping="Wrap"/>
                </StackPanel>

                <!-- File Path -->
                <StackPanel Grid.Row="2" Margin="0,5">
                    <TextBlock Text="Path:" Foreground="#AAA" FontSize="12"/>
                    <TextBlock x:Name="txtFilePath" Text="No file selected" Foreground="#999" FontSize="10" TextWrapping="Wrap"/>
                </StackPanel>
            </Grid>

            <!-- Progress Slider -->
            <Slider x:Name="sliderProgress" IsMoveToPointEnabled="True" Margin="0,10,0,20"
                    PreviewMouseLeftButtonDown="Slider_DragStarted"
                    PreviewMouseLeftButtonUp="Slider_DragCompleted"/>

            <!-- Player Controls -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="STOP" Click="BtnStop_Click" Width="80" Height="40" Margin="5"/>
                <Button Content="PLAY" Click="BtnPlay_Click" Width="100" Height="40" Margin="5" FontWeight="Bold" Background="#007ACC" Foreground="White"/>
                <Button Content="PAUSE" Click="BtnPause_Click" Width="80" Height="40" Margin="5"/>
            </StackPanel>

            <!-- Volume Control -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <TextBlock Text="Volume " VerticalAlignment="Center"/>
                <Slider x:Name="sliderVolume" Minimum="0" Maximum="1" Value="0.5" Width="150" ValueChanged="SliderVolume_ValueChanged"/>
            </StackPanel>
        </StackPanel>

        <!-- Right Panel: Library -->
        <Grid Grid.Column="1" Margin="10,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Library" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>

            <ListBox x:Name="lstLibrary" Grid.Row="1" Background="#333" Foreground="White" 
                     MouseDoubleClick="LstLibrary_MouseDoubleClick"
                     MouseLeftButtonUp="LstLibrary_MouseLeftButtonUp"/>

            <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,10,0,0">
                <Button Content="Add MP3" Click="BtnAdd_Click"  Margin="5"/>
                <Button Content="Remove" Click="BtnRemove_Click"  Margin="5"/>
                <Button Content="Edit" Click="BtnEdit_Click"  Margin="5" Background="#007ACC"/>
                <Button Name="BtnSettings" Content="Settings" Click="BtnSettings_Click"  Margin="2" Background="#555" Foreground="White"/>

            </StackPanel>
        </Grid>
    </Grid>
</Window>
