<Window x:Class="Telhai.DotNet.PlayerProject.EditTrackWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Track" Height="500" Width="600" Background="#222" Foreground="White" WindowStartupLocation="CenterOwner" ShowInTaskbar="False">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title Section -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="Track Title:" Foreground="#AAA" FontSize="12"/>
            <TextBox x:Name="txtTitle" Foreground="White" Background="#333" Padding="8" FontSize="14" 
                     Text="{Binding TrackTitle, UpdateSourceTrigger=PropertyChanged}"/>
        </StackPanel>

        <!-- Metadata Display -->
        <Grid Grid.Row="1" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                <TextBlock Text="Artist:" Foreground="#AAA" FontSize="12"/>
                <TextBlock Foreground="White" Text="{Binding ArtistName}"/>
            </StackPanel>

            <StackPanel Grid.Column="1">
                <TextBlock Text="Album:" Foreground="#AAA" FontSize="12"/>
                <TextBlock Foreground="White" Text="{Binding AlbumName}"/>
            </StackPanel>
        </Grid>

        <!-- Images Management -->
        <Grid Grid.Row="2" Margin="0,0,0,15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="Custom Images:" Foreground="#AAA" FontSize="12" Margin="0,0,0,10"/>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <ListBox x:Name="lstImages" Grid.Column="0" Background="#333" Foreground="White" 
                         ItemsSource="{Binding Images}" SelectedItem="{Binding SelectedImage}"/>

                <StackPanel Grid.Column="1" Margin="10,0,0,0" VerticalAlignment="Top">
                    <Button Content="Add" Click="BtnAddImage_Click" Width="70" Height="30" Margin="0,0,0,5" Background="#007ACC"/>
                    <Button Content="Remove" Click="BtnRemoveImage_Click" Width="70" Height="30" Background="#C41C1C"/>
                </StackPanel>
            </Grid>

            <!-- Image Preview -->
            <Border Grid.Row="2" BorderBrush="#555" BorderThickness="1" Margin="0,10,0,0" Background="#333" Height="150">
                <Image x:Name="imgPreview" Stretch="UniformToFill"/>
            </Border>
        </Grid>

        <!-- Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Save" Click="BtnSave_Click" Width="70" Height="30" Margin="5" Background="#007ACC"/>
            <Button Content="Cancel" Click="BtnCancel_Click" Width="70" Height="30" Margin="5" Background="#555"/>
        </StackPanel>
    </Grid>
</Window>
