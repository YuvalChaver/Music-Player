<Window x:Class="YuvalChaver.Telhai.DotNet.PlayerProject.EditTrackWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YuvalChaver.Telhai.DotNet.PlayerProject"
        mc:Ignorable="d"
        Title="Edit Track" Height="600" Width="500"
        Background="#333" Foreground="White" WindowStartupLocation="CenterOwner">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Edit Track Information" FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>

        <Grid Grid.Row="1" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Title:" VerticalAlignment="Center" Margin="0,0,10,0" Width="70"/>
            <TextBox x:Name="TxtTitle" Grid.Column="1" Background="#222" Foreground="White" Padding="5" Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}"/>
        </Grid>

        <Grid Grid.Row="2" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Artist:" VerticalAlignment="Center" Margin="0,0,10,0" Width="70"/>
            <TextBox x:Name="TxtArtist" Grid.Column="1" Background="#222" Foreground="White" Padding="5" Text="{Binding ArtistName, UpdateSourceTrigger=PropertyChanged}"/>
        </Grid>

        <Grid Grid.Row="3" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Album:" VerticalAlignment="Center" Margin="0,0,10,0" Width="70"/>
            <TextBox x:Name="TxtAlbum" Grid.Column="1" Background="#222" Foreground="White" Padding="5" Text="{Binding AlbumName, UpdateSourceTrigger=PropertyChanged}"/>
        </Grid>

        <Grid Grid.Row="4" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Artwork URL:" VerticalAlignment="Center" Margin="0,0,10,0" Width="70"/>
            <TextBox x:Name="TxtArtworkUrl" Grid.Column="1" Background="#222" Foreground="White" Padding="5" Text="{Binding AlbumArtworkUrl, UpdateSourceTrigger=PropertyChanged}"/>
            <Button Grid.Column="2" Content="Preview" Click="BtnPreviewArtwork_Click" Width="60" Background="#555" Foreground="White" Margin="5,0,0,0"/>
        </Grid>

        <StackPanel Grid.Row="5" Margin="0,10,0,0">
            <TextBlock Text="Custom Images:" FontWeight="Bold" Margin="0,0,0,5"/>
            
            <ListBox x:Name="lstCustomImages" Background="#222" Foreground="#DDD" Height="150" Margin="0,0,0,10" ItemsSource="{Binding CustomImages}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="{Binding}" VerticalAlignment="Center" TextTrimming="CharacterEllipsis"/>
                            <Button Grid.Column="1" Content="Remove" Click="BtnRemoveImage_Click" Width="60" Background="#C23C2A" Foreground="White" Margin="5,0,0,0"/>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <StackPanel Orientation="Horizontal">
                <Button x:Name="BtnAddImage" Content="Add Image" Click="BtnAddImage_Click" Width="100" Background="#007ACC" Foreground="White" Margin="0,0,10,0"/>
                <TextBlock x:Name="txtImageStatus" VerticalAlignment="Center" Foreground="#888"/>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Name="BtnSave" Content="Save" Click="BtnSave_Click" Width="80" Background="#007ACC" Foreground="White" Margin="0,0,10,0"/>
            <Button Name="BtnCancel" Content="Cancel" Click="BtnCancel_Click" Width="80" Background="#555" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>
